@{
    ViewData["Title"] = "Home Page";
}

@model IQueryable<Project>

<div class="text-center">
    <h1 class="display-4">WELCOME TO THE ONLINE BOOKSTORE</h1>
</div>
<br />
<br />
<div class="table-responsive-sm">
<table class="table table-striped; table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>BookID</th>
            <th>Title</th>
            <th>Author First Name</th>
            <th>Author Middle Name</th>
            <th>Author Last Name</th>
            <th>Publisher</th>
            <th>ISBN</th>
            <th>Classification</th>
            <th>Category</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody class="table-success">
        @foreach (var x in Model)
        {
        <tr>
            <td>@x.Bookid</td>
            <td>@x.Title</td>
            <td>@x.Author_FirstName</td>
            <td>@x.Author_MiddleName</td>
            <td>@x.Author_LastName</td>
            <td>@x.Publisher</td>
            <td>@x.ISBN</td>
            <td>@x.Classification</td>
            <td>@x.Category</td>
            <td>$@x.Price</td>
        </tr>       
        }
    </tbody>
</table>
</div>
<br />
<br />
<br />
<br />
<footer class="text-center">
    <p class="font-italic">####:BookShop:1565 N University Ave:(801)-897-4521:####</p>
</footer>